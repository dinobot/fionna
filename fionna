#!/bin/bash
#current version is 0.1
IFS=$'\n'
out_path=/tmp

if [[ $(ls *.flac 2>/dev/null) ]]
	then
		if [[ /usr/bin/ffmpeg ]]
			then
				for a in *.flac; do
				  < /dev/null ffmpeg -i "$a" -qscale: 1 $out_path/"${a[@]/%flac/mp3}"
				done
			else 
				echo 'you have no ffmpeg in /usr/bin'
			fi
	else 
		echo 'you have no any flac tracks in ' $(pwd)
fi
unset IFS
